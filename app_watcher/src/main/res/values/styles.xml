<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--沉浸式状态栏-->
    <style name="TranslucentStatusTheme" parent="AppTheme">

    </style>

    <!--Toolbar/其他标题栏 的文本样式-->
    <style name="ToolbarTitleTextAppearance">
        <item name="android:textSize">@dimen/toolbar_title_text_size</item>
        <item name="android:textColor">@color/toolbar_title_text_color</item>
    </style>

    <!--CollapsingToolbarLayout 展开时的文本样式-->
    <style name="ExpandedTitleTextAppearance">
        <item name="android:textSize">@dimen/expand_title_size</item>
        <item name="android:textColor">@color/expanded_title_text_color</item>
    </style>

    <!--CollapsingToolbarLayout 折叠时的文本样式-->
    <style name="CollapsedTitleTextAppearance">
        <item name="android:textSize">@dimen/collapse_title_size</item>
        <item name="android:textColor">@color/collapsed_title_text_color</item>
    </style>

    <!--加载网页的进度条-->
    <style name="WebLoadingProgressBarTheme" parent="Base.Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:minHeight">2dp</item>
        <item name="android:maxHeight">2dp</item>
        <!--<item name="progress"-->
    </style>

</resources>
