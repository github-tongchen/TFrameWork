<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--沉浸式状态栏-->
    <style name="TranslucentStatusTheme" parent="AppTheme">

    </style>

    <!--加载网页的进度条-->
    <style name="WebLoadingProgressBarTheme" parent="Base.Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:minHeight">2dp</item>
        <item name="android:maxHeight">2dp</item>
    </style>

    <style name="ToolbarTextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ExpandedTitleTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CollapsedTitleTextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
